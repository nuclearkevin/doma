<!--                                                                   -->
<!--           Solving CP1 from NPRE 555 (at UIUC) with DOMA           -->
<!--                                                                   -->

<doma_inp>
  <solver solve_type="eigen" scheme="dd" num_groups="1" fs_tol="1e-4"
          mg_tol="1e-4" fs_max_it="500" mg_max_it="100" k_tol="1e-5" dsa="true"/>
  <angular_quad type="gc" np="80" na="10"/>
  <mesh dims="1" refinement="0">
    <dx     vals="50.0, 50.0"/>
    <ix     vals="5,   5"/>
    <blocks vals="0,    1"/>
  </mesh>
  <materials>
    <mat block="0">
      <reaction type="total"      mgxs="0.17"/>
      <reaction type="scatter"    mgxs="0.05"/>
      <reaction type="nu_sigma_f" mgxs="0.15"/>
      <reaction type="chi_p"      mgxs="1.0"/>
    </mat>
    <mat block="1">
      <reaction type="total"      mgxs="0.15"/>
      <reaction type="scatter"    mgxs="0.05"/>
      <reaction type="nu_sigma_f" mgxs="0.12"/>
      <reaction type="chi_p"      mgxs="1.0"/>
    </mat>
  </materials>
</doma_inp>
